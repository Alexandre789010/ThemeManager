                </ChildContent>
            </MudExpansionPanel>
        </MudExpansionPanels>

        <MudText Typo="Typo.body2" GutterBottom="true" Class="px-4 pt-4"><b>General</b></MudText>
        <MudExpansionPanels Elevation="0" Square="true" Class="theme-color-expansion mt-4">
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Surface" Color="@_customTheme.Palette.Surface" />
