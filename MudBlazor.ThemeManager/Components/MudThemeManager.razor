        <MudText Typo="Typo.body2" GutterBottom="true" Class="px-4 pt-4"><b>Text & Actions</b></MudText>
        <MudExpansionPanels Elevation="0" Square="true" Class="theme-color-expansion mt-4">
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Text Primary" Color="@_customTheme.Palette.TextPrimary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.TextPrimary" ColorValue="@_customTheme.Palette.TextPrimary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
