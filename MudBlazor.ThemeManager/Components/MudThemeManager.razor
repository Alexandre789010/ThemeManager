                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Drawer Text" Color="@_customTheme.Palette.DrawerText" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.DrawerText" ColorValue="@_customTheme.Palette.DrawerText" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Drawer Icons" Color="@_customTheme.Palette.DrawerIcon" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.DrawerIcon" ColorValue="@_customTheme.Palette.DrawerIcon" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Drawer BG" Color="@_customTheme.Palette.DrawerBackground" />
