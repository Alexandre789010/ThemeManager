@namespace MudBlazor.ThemeManager

<MudDrawer @bind-Open="@Open" Anchor="Anchor.Right" Elevation="25" Variant="@DrawerVariant.Temporary" DisableOverlay="true">
    <MudDrawerHeader>
        <MudText Typo="Typo.h6">Theme Manager</MudText>
    </MudDrawerHeader>
    <div class="px-4">
        <MudDivider Class="mb-2" />
        <MudText>Layout</MudText>
        <MudSwitch @bind-Checked="@Clipped" Label="Clipped Drawer" Color="Color.Primary" />
        <MudDivider Class="my-2" />
        <MudText>Theme</MudText>
        <MudSwitch @bind-Checked="@Dark" Label="Dark" Color="Color.Primary" />
        <MudDivider Class="my-2" />
        <MudText>RTL</MudText>
        <MudSwitch @bind-Checked="@Rtl" Label="Right to Left" Color="Color.Primary" />
        <MudDivider Class="mt-2 mb-4" />
        <MudText GutterBottom="true">Custom Settings</MudText>
    </div>
    <div>
        <MudSelect T="string" Label="Font" @bind-Value="@Font" Class="mx-5">
            <MudSelectItem Value="@("Roboto")" />
            <MudSelectItem Value="@("Montserrat")" />
            <MudSelectItem Value="@("Segoe UI")" />
            <MudSelectItem Value="@("Avenir")" />
        </MudSelect>
        <MudSlider Step="1" Min="0" Max="20" T="int" @bind-Value="@BorderRadius" Class="my-5 px-5"><MudText Typo="Typo.body2">Border Radius: <b>@($"{BorderRadius}px")</b></MudText></MudSlider>

        <MudText Typo="Typo.body2" GutterBottom="true" Class="px-4"><b>Theme Colors</b></MudText>
        <MudExpansionPanels Elevation="0" Square="true" Class="theme-color-expansion mt-4">
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Primary" Color="@_customTheme.Palette.Primary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Primary" ColorValue="@_customTheme.Palette.Primary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Secondary" Color="@_customTheme.Palette.Secondary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Secondary" ColorValue="@_customTheme.Palette.Secondary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Tertiary" Color="@_customTheme.Palette.Tertiary" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Tertiary" ColorValue="@_customTheme.Palette.Tertiary" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Info" Color="@_customTheme.Palette.Info" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Info" ColorValue="@_customTheme.Palette.Info" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Success" Color="@_customTheme.Palette.Success" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Success" ColorValue="@_customTheme.Palette.Success" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Warning" Color="@_customTheme.Palette.Warning" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Warning" ColorValue="@_customTheme.Palette.Warning" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Error" Color="@_customTheme.Palette.Error" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Error" ColorValue="@_customTheme.Palette.Error" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
                    <MudThemeManagerColorItem Name="Dark" Color="@_customTheme.Palette.Dark" />
                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Dark" ColorValue="@_customTheme.Palette.Dark" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
        </MudExpansionPanels>

        <MudText Typo="Typo.body2" GutterBottom="true" Class="px-4 pt-4"><b>Components</b></MudText>
        <MudExpansionPanels Elevation="0" Square="true" Class="theme-color-expansion mt-4">
            <MudExpansionPanel HideIcon="true">
                <TitleContent>
