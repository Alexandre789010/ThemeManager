                </TitleContent>
                <ChildContent>
                    <MudThemeManagerColorPicker ColorType="ThemePaletteColor.Divider" ColorValue="@_customTheme.Palette.Divider" ColorValueChanged="UpdatePalette"></MudThemeManagerColorPicker>
                </ChildContent>
            </MudExpansionPanel>
            <MudExpansionPanel HideIcon="true">
